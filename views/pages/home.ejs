  <style>
    :root{
        /* Light-Color-theme */ 
           /* Text-colors */
           --txt-light: #58606e;
           --txt-dark:#141a2d;
           --active-light: #f87524;

           /* Backgrounds */
           --bg-white: #fdfdfd;
           --bg-dark-light:#e6ecf7;

           /* borders */
           --border-light:#e9e9e9;


           /* Text-sizes*/
            --sm-text: 13px;
     }
     *{
        box-sizing: border-box;
      }
     body{
        color: var(--txt-light);
        background-color: var(--bg-light);
     }
    a{
        text-decoration: none;
        color:inherit;
    }
    .navbar{
        background-color: #ffffff;
        border-bottom:1px solid var(--bg-dark-light);
    } 
    .navbar .navbar-brand{ 
       float: center !important;
    }
     .navbar .navbar-brand img{
        max-width: 100%; 
        width:100px;
        height:auto;
     }
     .navbar a{
         color:var(--txt-dark);
     }
     .navbar a:hover{
        color:var(--active-light);
     }

      .card-title{
        color: var(--txt-dark);
        font-weight: 700;
      }
    .article-bx{ 
        max-width:30%;
    }
    .news-info, .news-source {font-size:var(--sm-text);}
    .news-info .news-date{font-weight:530;}
    .news-source{
        font-weight: 600;
    }
    .article-bx .card-text{
       text-align: justify;
       line-break:anywhere;
       font-weight:500;
    }
    .news-info .news-category{ 
        padding:6px 12px;
        border-radius:36px;
        font-weight:600;
        background-color: var(--bg-dark-light);
     }
     .article-bx  .card a.card-link{
        color:var(--active-light) !important;
     }
    .article-bx  .card, .card-footer { 
        border: none; 
        background-color:transparent;
    }
    .article-bx  .card-body, .card-footer { 
        padding:8px 2px !important;
     }
    .article-bx .card-header{
        position: relative;  
        padding: 0px; 
        border-radius: 18px;
        overflow: hidden;
        border:1px solid var(--border-light); 
        background-color:var(--bg-white);
    }
    .article-bx .card-header img{ 
        width:100%; 
        height:auto;  
    }
  </style> 



